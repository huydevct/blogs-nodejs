<div class="mt-4">
  <h3>Courses Update</h3>

  <form method="POST" action="/courses/store">
    <div class="form-group">
      <label for="name">Name Course</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
      />
    </div>
    <div class="form-group">
      <label for="description">Description Course</label>
      <input
        type="text"
        class="form-control"
        id="description"
        name="description"
      />
    </div>
    <div class="form-group">
      <label for="videoId">Video Id</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        name="videoId"
      />
    </div>
    <div class="form-group">
      <label for="level">Level Course</label>
      <input
        type="text"
        class="form-control"
        id="level"
        name="level"
      />
    </div>
    <button type="submit" class="btn btn-primary">Add Course</button>
  </form>

</div>